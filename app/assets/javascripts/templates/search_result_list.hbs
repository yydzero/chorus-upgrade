{{#if shown}}
    {{#unless hideHeaders}}
        <div class="search_result_header">
            <div class="list_content_details">
                <div class="pagination">
                    {{#if moreResults}}
                        <span class="count">{{t "search.count" shown=shown total=total}}</span>
                        <a class="show_all" data-type="{{entityType}}" href="#">{{t "search.show_all"}}</a>
                    {{else}}
                        <span class="count">{{t "search.count_short" count=shown}}</span>
                    {{/if}}
                </div>
                <span class="title">{{title}}</span>
            </div>
        </div>
    {{/unless}}

    <div class="list {{entityType}}_list"></div>
{{/if}}
