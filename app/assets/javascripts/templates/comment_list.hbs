{{#if models.length}}
    <ul class="comments">
        {{#eachWithMoreLink models initialLimit "activity.comments.more" "activity.comments.less" true}}
        <li data-comment-id="{{id}}" class="{{moreClass}} activity_item comment media">
            <div class="icon">
                {{#if isInsight}}
                <div class="insight_ribbon">
                    <span class="left"/><span class="center">{{t "activity.insight"}}</span><span class="right"/>
                </div>
                {{/if}}
                <a href="{{iconHref}}">
                    <img class="profile" title="{{displayName}}" src="{{iconSrc}}"/>
                </a>
            </div>
            <div class="comment_content bd">
                <div class="comment_header">
                    {{headerHtml}}
                </div>
                <div class="body"></div>
                <div class="actions">
                    <span class="timestamp">{{relativeTimestamp timestamp}}</span>
                    {{#ifAdminOr isOwner}}
                        <a class="delete_link alert" data-alert="DeleteNoteConfirmAlert" data-comment-id="{{id}}" href="#">
                            <span class="fa fa-trash delete"></span>{{t "actions.delete"}}
                        </a>
                    {{/ifAdminOr}}
                </div>
            </div>
        </li>
        {{/eachWithMoreLink}}
    </ul>
{{/if}}
