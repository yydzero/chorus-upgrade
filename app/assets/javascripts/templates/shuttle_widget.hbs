
<div class="subheader">
    <div class="shuttle_left">
        <div class="search_container">
            <div>
                <input type="text" class="search"/>
                <a class="add_all" href="#">{{t "shuttle.add_all"}}</a>
            </div>
        </div>
    </div>
    
    <div class="shuttle_right">
        <div class="summary">
            <div>
                <span class='selected_title'>{{objectName}}:</span><span class="selected_count"/>
                <a class="remove_all" href="#">{{t "shuttle.remove_all"}}</a>
            </div>
        </div>
    </div>
</div>

<div class="shuttle_body">
<ul class="available">
    {{#each models}}
        <li data-id="{{id}}" class="{{#if isAdded}}added{{/if}} {{#if isNonRemovable}}non_removable{{/if}}">
            <div class="image">
                <img class="profile" src="{{imageUrl}}" alt="" />
                <span class="fa-stack fa-lg checkmark">
                  <span class="fa fa-circle fa-stack-2x"></span>
                  <span class="fa fa-check fa-stack-1x fa-inverse"></span>
                </span>
            </div>
            <div class="name" title="{{displayName}}">{{displayName}}</div>
            <a class="add" href="#" title="{{t "actions.add"}}">
                <span class="fa fa-plus-circle add"></span>
            </a>
            <span class="was_added">{{#if isNonRemovable}}{{nonRemovableText}}{{else}}{{t "shuttle.was_added"}}{{/if}}</span>
        </li>
    {{/each}}
</ul>

<ul class="selected">
    {{#each models}}
    <li data-id="{{id}}" class="{{#if isAdded}}added{{/if}} {{#if isNonRemovable}}non_removable{{/if}}">
            <div class="image">
                <img class="profile" src="{{imageUrl}}" alt="" />
            </div>
            <div class="name" title="{{displayName}}">{{displayName}}</div>
            {{#if isNonRemovable}}
                <span class="was_added">{{nonRemovableText}}</span>
            {{else}}
                <a class="remove" href="#" title="{{t 'actions.remove'}}">
                    <span class="fa fa-times-circle remove"></span>
                </a>
            {{/if}}
        </li>
    {{/each}}
</ul>
</div>
