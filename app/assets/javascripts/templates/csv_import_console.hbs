<div class="options">
    {{#if includeHeader}}
        <div class="header_options">
            <input id="hasHeader" type="checkbox" {{#if hasHeader}}checked="checked"{{/if}}></input>
            <label for="hasHeader">{{t "dataset.import.include_header"}}</label>
        </div>
    {{/if}}

    <span class="delimiter">Delimiter</span>

    <input type="radio" class="delimiter" id="delimiter_tab" name="delimiter" value="&#09;"/>
    <label class="delimiter" for="delimiter_tab">Tab</label>

    <input type="radio" class="delimiter" id="delimiter_comma" name="delimiter" value=","/>
    <label class="delimiter" for="delimiter_comma">Comma</label>

    <input type="radio" class="delimiter" id="delimiter_semicolon" name="delimiter" value=";"/>
    <label class="delimiter" for="delimiter_semicolon">Semicolon</label>

    <input type="radio" class="delimiter" id="delimiter_space" name="delimiter" value=" "/>
    <label class="delimiter" for="delimiter_space">Space</label>

    <input type="radio" class="delimiter" id="delimiter_pipe" name="delimiter" value="|"/>
    <label class="delimiter" for="delimiter_pipe">{{t "dataset.import.delimiter.pipe"}}</label>

    <input type="radio" class="delimiter" id="delimiter_other" name="delimiter" value="other"/>
    <label class="delimiter" for="delimiter_other">Other</label>

    <input type="text" class="delimiter" name="custom_delimiter" value="{{delimiter}}" maxlength="1"/>
</div>

<div class="result_table"></div>