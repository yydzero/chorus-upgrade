<div class="column_filter"></div>

<select class="comparator"/>

<span class="filter default hidden">
    <input class="validatable" name="value" type="text"/>
</span>

<span class="filter time hidden">
    <input class="validatable" name="value" type="text" placeholder="{{t "dataset.filter.time_placeholder"}}"/>
</span>

<span class="filter date hidden">
    <input class="validatable" name="month" type="text" placeholder='{{t "datepicker.placeholder.month"}}'/>
    <input class="validatable" name="day" type="text" placeholder='{{t "datepicker.placeholder.day"}}'/>
    <input class="validatable" name="year" type="text" placeholder='{{t "datepicker.placeholder.year"}}'/>
</span>

<a href="#" class="removeWidget" title="{{t 'actions.remove'}}">
    <span class="fa fa-times-circle remove"></span>
</a>