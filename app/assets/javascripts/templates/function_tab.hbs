{{#if error}}
    <div class="notice">
        <span class="top">{{error}}</span>
    </div>
{{else}}
    {{#if schemaAssociated}}
        {{#if noCredentials}}
            <div class="notice no_credentials"><span class="bottom">{{noCredentialsWarning}}</span></div>
        {{else}}
            <input class="search" placeholder='{{t "schema.functions.list.hint"}}'/>
            <div class="context">{{unsafeT "schema.functions.search_in" schemaLink=schemaLink}}</div>
            {{#if hasCollection}}
                {{#if models.length}}
                    <ul class="list accordion">
                        {{#each models}}
                            <li data-cid="{{cid}}" data-fullname="{{fullName}}" data-name="{{name}}">
                                <span class="spacer_left"/>
                                <img src="images/general/function.svg"/>
                                <div class="name list_item_text" title="{{hintText}}">{{name}}</div>
                                <span class="spacer_right"/>
                            </li>
                        {{/each}}
                    </ul>
                {{else}}
                    <div class="none_found">{{t "schema.functions.none_found"}}</div>
                {{/if}}
            {{/if}}

            <div class="schema_menu_container">
                <ul class="schema_menu">
                    {{#each schemas}}
                        <li>
                            
                            {{#if isCurrent}}
                                <div class="checkmark">
                            	    <span class="fa fa-check"></span>
                            	</div>
                            {{/if}}

                            <a class="schema" data-id="{{id}}">{{name}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
    {{else}}
        <div class="empty_selection notice">
            <span class="top">{{t "database.sidebar.no_schema.title"}}</span>
            <span class="bottom">{{t "database.sidebar.no_schema.text"}}</span>
        </div>
    {{/if}}
{{/if}}