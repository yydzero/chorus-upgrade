<div class="line">
    <div class="col">
        <ul class="list_horizontal">
        <li>
            <button class="run_file button_action">
            <span class="run_description">{{t "workfile.content_details.run_file"}}</span>
            <span class="fa fa-caret-down down_caret"/>
<!--             <span class="down_caret"></span> -->
        </button>
        </li>
            <li>
        <span class="execution_schema">
            {{t "workfile.content_details.execution_schema"}}:
            {{#if schemaName}}
                {{schemaName}}
            {{else}}
                {{t "workfile.content_details.no_schema"}}
            {{/if}}
        </span>
            </li>

        <li><a class="change_workfile_schema" href="#">Change</a></li>
        </ul>
    </div>

    <div class="col col-ext">
        <div class="save">
            <span class="auto_save mrm hidden"></span>
            <button class="save_as button_action">{{t "workfile.content_details.save_as"}}<span class="fa fa-caret-down down_caret"/</button>
        </div>
    </div>
</div>

<div class="hidden">
    <div class="run_workfile">
        <ul class="run_menu">
        <li>
            {{#if schemaName}}
                <span class="menu_shortcut">{{hotKeyName "r"}}</span>
                <a href="#" class="run_default">
                    {{t "workfile.content_details.run"}}
                </a>
            {{else}}
                <span class="run_default">{{t "workfile.content_details.run"}}</span>
            {{/if}}
        </li>
        <li>
            {{#if schemaName}}
                <a href="#" class="run_and_download">{{t "workfile.content_details.run_and_download"}}</a>
            {{else}}
                <span class="run_and_download">{{t "workfile.content_details.run_and_download"}}</span>
            {{/if}}
        </li>

        <li>
            <span class="menu_shortcut">{{hotKeyName "e"}}</span>
            <a href="#" class="run_selection">
            {{t "workfile.content_details.run_selection"}}
        </a></li>
        <li>
            <a href="#" class="run_selection_and_download">{{t "workfile.content_details.run_selection_and_download"}}</a>
        </li>
    </ul>
    </div>
</div>